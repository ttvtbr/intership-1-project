
@model IEnumerable<intership.Models.Post>
@{
    ViewData["Title"] = "Posts";
}
<h2>Posts</h2>
<p><a asp-action="Create" class="btn btn-primary">New Post</a></p>
<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Created</th>
            <th>Likes</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var p in Model)
    {
        <tr>
            <td>@p.Title</td>
            <td>@p.AuthorName</td>
            <td>@p.CreatedAt.ToLocalTime()</td>
            <td>@p.Likes?.Count</td>
            <td><a asp-action="Details" asp-route-id="@p.Id">Open</a></td>
        </tr>
    }
    </tbody>
</table>
